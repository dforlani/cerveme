<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.cerveme.crud_kotlin.ViewPedido">

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/addPedido"
            android:textColor="#FAFAFA"
            android:textSize="19dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/btnCadastrar"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="?android:selectableItemBackground">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/ic_done_black_48px"
                android:tint="#FAFAFA" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cardapioContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar"
        android:orientation="vertical">


        <TableLayout
            android:id="@+id/cardapioTabela"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <include android:id="@+id/conjunto1"
                layout="@layout/unidade_cardapio"
                />

            <include android:id="@+id/conjunto2"
                layout="@layout/unidade_cardapio"
                />

        </TableLayout>
    </RelativeLayout>
</RelativeLayout>